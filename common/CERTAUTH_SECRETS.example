# Copy this template file to ./CERTAUTH_SECRETS and fill in private secrets

# Root Certificate Authority Password
export ROOT_CA_PASSWORD=changeme
# Intermediate Certificate Authority Password
export INT_CA_PASSWORD=changemetoo
# Vault server (leave present but blank)
export VAULT_SERVER_KEY_PASSWORD=
# Docker service should match this name
export VAULT_SERVER_FQDN=vault
# Vault initialization client (leave present but blank)
export VAULT_INIT_CLIENT_KEY_PASSWORD=
# Docker service should match this name
export VAULT_INIT_CLIENT_NAME=vault_init
# Name of Vault initialization client cert (leave as-is)
export VAULT_PKI_INT=pki_int
